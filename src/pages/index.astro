---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import WhyUs from '../components/WhyUs.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import ContactForm from '../components/ContactForm.astro';
import Map from '../components/Map.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Strona główna" description="Haris-Instal - Profesjonalne usługi hydrauliczne w Sosnowcu i okolicach. Instalacje wodne, gazowe, ogrzewanie, naprawy i awarie 24/7.">
  <Header />

  <main>
    <Hero />
    <Services />
    <WhyUs />
    <Testimonials />
    <FAQ />

    <!-- Contact Section -->
    <section id="kontakt" class="section-padding bg-[var(--bg-secondary)]">
      <div class="container-custom">
        <div class="text-center mb-16">
          <span class="text-[var(--accent)] font-medium text-sm uppercase tracking-wider">Kontakt</span>
          <h2 class="section-title mt-2">Skontaktuj się z nami</h2>
          <p class="section-subtitle">
            Masz pytania lub potrzebujesz wyceny? Napisz do nas!
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Form -->
          <div class="card">
            <ContactForm />
          </div>

          <!-- Map + Contact info -->
          <div class="space-y-6">
            <Map class="h-[300px]" />

            <div class="card">
              <h3 class="font-semibold text-lg mb-4">Dane kontaktowe</h3>
              <ul class="space-y-4">
                <li>
                  <a
                    href="tel:+48123456789"
                    class="flex items-center gap-3 text-[var(--text-secondary)] hover:text-[var(--accent)] transition-colors duration-200"
                  >
                    <div class="w-10 h-10 rounded-lg bg-[var(--accent)]/10 flex items-center justify-center">
                      <svg class="w-5 h-5 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm text-[var(--text-secondary)]">Telefon</p>
                      <p class="font-medium text-[var(--text-primary)]">+48 123 456 789</p>
                    </div>
                  </a>
                </li>
                <li>
                  <a
                    href="mailto:kontakt@haris-instal.pl"
                    class="flex items-center gap-3 text-[var(--text-secondary)] hover:text-[var(--accent)] transition-colors duration-200"
                  >
                    <div class="w-10 h-10 rounded-lg bg-[var(--accent)]/10 flex items-center justify-center">
                      <svg class="w-5 h-5 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm text-[var(--text-secondary)]">Email</p>
                      <p class="font-medium text-[var(--text-primary)]">kontakt@haris-instal.pl</p>
                    </div>
                  </a>
                </li>
                <li>
                  <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-[var(--accent)]/10 flex items-center justify-center">
                      <svg class="w-5 h-5 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm text-[var(--text-secondary)]">Godziny pracy</p>
                      <p class="font-medium text-[var(--text-primary)]">Pon-Pt: 8:00-18:00 | Awarie: 24/7</p>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
