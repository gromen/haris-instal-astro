---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import ContactForm from '../components/ContactForm.astro';
import Map from '../components/Map.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config/site';
---

<BaseLayout title="Kontakt" description="Skontaktuj się z Haris-Instal. Profesjonalne usługi hydrauliczne w Ostrowi Mazowieckiej i okolicach. Zadzwoń lub napisz!">
  <Header />

  <main>
    <!-- Hero -->
    <section class="section-padding bg-[var(--bg-secondary)]">
      <div class="container-custom">
        <div class="text-center max-w-3xl mx-auto">
          <span class="text-[var(--accent)] font-medium text-sm uppercase tracking-wider">Kontakt</span>
          <h1 class="section-title mt-2">Skontaktuj się z nami</h1>
          <p class="section-subtitle">
            Masz pytania lub potrzebujesz wyceny? Zadzwoń lub wypełnij formularz, a odezwiemy się najszybciej jak to możliwe.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact info cards -->
    <section class="py-8">
      <div class="container-custom">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 -mt-12">
          <!-- Phone -->
          <a href={siteConfig.contact.phone.href} class="card card-hover text-center">
            <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-gradient-copper flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <h3 class="font-semibold mb-1">Zadzwoń</h3>
            <p class="text-[var(--accent)] font-medium">{siteConfig.contact.phone.display}</p>
            <p class="text-sm text-[var(--text-secondary)] mt-1">Awarie {siteConfig.hours.emergency}</p>
          </a>

          <!-- Email -->
          <a href={`mailto:${siteConfig.contact.email.primary}`} class="card card-hover text-center">
            <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-gradient-copper flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold mb-1">Napisz email</h3>
            <p class="text-[var(--accent)] font-medium">{siteConfig.contact.email.primary}</p>
            <p class="text-sm text-[var(--text-secondary)] mt-1">Odpowiadamy w 24h</p>
          </a>

          <!-- Location -->
          <div class="card text-center">
            <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-gradient-copper flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="font-semibold mb-1">Obszar działania</h3>
            <p class="text-[var(--accent)] font-medium">{siteConfig.address.city}</p>
            <p class="text-sm text-[var(--text-secondary)] mt-1">{siteConfig.address.street}</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Form + Map -->
    <section class="section-padding">
      <div class="container-custom">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Form -->
          <div>
            <h2 class="text-2xl font-bold mb-6">Formularz kontaktowy</h2>
            <div class="card">
              <ContactForm />
            </div>
          </div>

          <!-- Map + Hours -->
          <div class="space-y-6">
            <div>
              <h2 class="text-2xl font-bold mb-6">Znajdź nas</h2>
              <Map class="h-[350px]" />
            </div>

            <div class="card">
              <h3 class="font-semibold text-lg mb-4">Godziny pracy</h3>
              <ul class="space-y-3">
                <li class="flex justify-between items-center py-2 border-b border-[var(--border-color)]">
                  <span class="text-[var(--text-secondary)]">Poniedziałek - Piątek</span>
                  <span class="font-medium">{siteConfig.hours.weekdays}</span>
                </li>
                <li class="flex justify-between items-center py-2 border-b border-[var(--border-color)]">
                  <span class="text-[var(--text-secondary)]">Sobota</span>
                  <span class="font-medium">{siteConfig.hours.saturday}</span>
                </li>
                <li class="flex justify-between items-center py-2 border-b border-[var(--border-color)]">
                  <span class="text-[var(--text-secondary)]">Niedziela</span>
                  <span class="font-medium text-[var(--text-secondary)]">{siteConfig.hours.sunday}</span>
                </li>
                <li class="flex justify-between items-center py-2">
                  <span class="text-[var(--accent)] font-medium">Dyżur awaryjny</span>
                  <span class="font-bold text-[var(--accent)]">{siteConfig.hours.emergency}</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
