---
const testimonials = [
  {
    name: 'Anna Kowalska',
    location: 'Ostrów Mazowiecka',
    text: 'Szybka i profesjonalna obsługa. Pan hydraulik przyjechał w ciągu godziny i naprawił awarię. Polecam!',
    rating: 5,
  },
  {
    name: 'Marek Nowak',
    location: 'Wyszków',
    text: 'Wykonali kompleksową wymianę instalacji w łazience. Wszystko sprawnie i w terminie. Cena zgodna z wyceną.',
    rating: 5,
  },
  {
    name: 'Ewa Wiśniewska',
    location: 'Małkinia Górna',
    text: 'Bardzo pomocni i kompetentni. Doradzili najlepsze rozwiązanie i wykonali wszystko perfekcyjnie.',
    rating: 5,
  },
];
---

<section id="opinie" class="section-padding bg-[var(--bg-secondary)]">
  <div class="container-custom">
    <!-- Section header -->
    <div class="text-center mb-16">
      <span class="text-[var(--accent)] font-medium text-sm uppercase tracking-wider">Opinie</span>
      <h2 class="section-title mt-2">Co mówią nasi klienci</h2>
      <p class="section-subtitle">
        Setki zadowolonych klientów zaufało naszym usługom.
      </p>
    </div>

    <!-- Testimonials grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {
        testimonials.map((testimonial) => (
          <div class="card relative">
            <!-- Quote icon -->
            <div class="absolute -top-3 -left-3 w-8 h-8 rounded-full bg-gradient-copper flex items-center justify-center">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
            </div>

            <!-- Stars -->
            <div class="flex gap-1 mb-4">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5 text-[var(--accent-gold)]" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            <!-- Text -->
            <p class="text-[var(--text-secondary)] mb-6 italic">
              "{testimonial.text}"
            </p>

            <!-- Author -->
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-[var(--accent)]/20 flex items-center justify-center">
                <span class="text-[var(--accent)] font-semibold text-sm">
                  {testimonial.name.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
              <div>
                <p class="font-semibold text-sm">{testimonial.name}</p>
                <p class="text-[var(--text-secondary)] text-xs">{testimonial.location}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Google reviews link -->
    <div class="text-center mt-10">
      <a
        href="https://www.google.com/maps"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-[var(--accent)] hover:text-[var(--accent-light)] transition-colors duration-200"
      >
        <span>Zobacz więcej opinii na Google</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>
