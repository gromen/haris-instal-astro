---
const services = [
  {
    title: 'Instalacje wodne',
    description: 'Kompleksowe instalacje wodno-kanalizacyjne dla domów i mieszkań.',
    icon: 'droplet',
  },
  {
    title: 'Instalacje gazowe',
    description: 'Montaż i przeglądy instalacji gazowych zgodnie z normami.',
    icon: 'flame',
  },
  {
    title: 'Ogrzewanie',
    description: 'Montaż kotłów, grzejników i systemów ogrzewania podłogowego.',
    icon: 'thermometer',
  },
  {
    title: 'Naprawy i awarie',
    description: 'Szybka pomoc przy awariach hydraulicznych 24/7.',
    icon: 'wrench',
  },
  {
    title: 'Udrażnianie rur',
    description: 'Profesjonalne czyszczenie i udrażnianie kanalizacji.',
    icon: 'refresh',
  },
  {
    title: 'Montaż armatury',
    description: 'Instalacja umywalek, zlewozmywaków, wanien i kabin prysznicowych.',
    icon: 'faucet',
  },
];
---

<section id="uslugi" class="section-padding bg-[var(--bg-secondary)]">
  <div class="container-custom">
    <!-- Section header -->
    <div class="text-center mb-16">
      <span class="text-[var(--accent)] font-medium text-sm uppercase tracking-wider">Co oferujemy</span>
      <h2 class="section-title mt-2">Nasze usługi</h2>
      <p class="section-subtitle">
        Oferujemy pełen zakres usług hydraulicznych dla klientów indywidualnych i firm.
      </p>
    </div>

    <!-- Services grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        services.map((service) => (
          <div class="card card-hover group">
            <div class="flex items-start gap-4">
              <!-- Icon -->
              <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-[var(--accent)]/10 flex items-center justify-center group-hover:bg-[var(--accent)]/20 transition-colors duration-300">
                {service.icon === 'droplet' && (
                  <svg class="w-6 h-6 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a8 8 0 01-8-8c0-3.5 8-12 8-12s8 8.5 8 12a8 8 0 01-8 8z" />
                  </svg>
                )}
                {service.icon === 'flame' && (
                  <svg class="w-6 h-6 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />
                  </svg>
                )}
                {service.icon === 'thermometer' && (
                  <svg class="w-6 h-6 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                )}
                {service.icon === 'wrench' && (
                  <svg class="w-6 h-6 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
                {service.icon === 'refresh' && (
                  <svg class="w-6 h-6 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                )}
                {service.icon === 'faucet' && (
                  <svg class="w-6 h-6 text-[var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                )}
              </div>

              <!-- Content -->
              <div class="flex-1">
                <h3 class="text-lg font-semibold mb-2 group-hover:text-[var(--accent)] transition-colors duration-300">
                  {service.title}
                </h3>
                <p class="text-[var(--text-secondary)] text-sm">
                  {service.description}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="/kontakt" class="btn-primary">
        Zamów usługę
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
