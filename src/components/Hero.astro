---
interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
}

const {
  title = "Profesjonalne usługi hydrauliczne",
  subtitle = "Zaufaj ekspertom z wieloletnim doświadczeniem. Działamy szybko, skutecznie i w uczciwych cenach.",
  backgroundImage = "/images/slide-1.webp",
} = Astro.props;

const phone = "+48 791 334 999";
const phoneHref = "tel:+48791334999";
---

<section
  class="relative min-h-[90vh] flex items-center justify-center overflow-hidden"
>
  <!-- Background image -->
  <div class="absolute inset-0">
    <img
      src={backgroundImage}
      alt=""
      fetchpriority="high"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <!-- Dark overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/80"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 container-custom text-center px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Badge -->

      <!-- Main heading -->
      <h1
        class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-6 text-balance"
      >
        {title}
        <span class="block mt-2 text-gradient"
          >w Ostrowi Mazowieckiej i okolicach</span
        >
      </h1>

      <!-- Subtitle -->
      <p
        class="text-lg md:text-xl text-gray-300 mb-10 max-w-2xl mx-auto text-balance"
      >
        {subtitle}
      </p>

      <!-- CTA buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href={phoneHref}
          class="btn-primary text-lg px-8 py-4 w-full sm:w-auto"
        >
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          {phone}
        </a>
        <a
          href="/kontakt"
          class="inline-flex items-center justify-center px-8 py-4 font-semibold text-white border-2 border-white/30 rounded-lg transition-all duration-300 hover:bg-white/10 hover:border-white/50 w-full sm:w-auto"
        >
          Napisz do nas
          <svg
            class="w-5 h-5 ml-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <!-- Trust indicators -->
      <div class="mt-16 flex flex-wrap justify-center gap-8 text-gray-400">
        <div class="flex items-center gap-2">
          <svg
            class="w-5 h-5 text-[var(--accent)]"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"></path>
          </svg>
          <span class="text-sm">15+ lat doświadczenia</span>
        </div>
        <div class="flex items-center gap-2">
          <svg
            class="w-5 h-5 text-[var(--accent)]"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"></path>
          </svg>
          <span class="text-sm">500+ zadowolonych klientów</span>
        </div>
        <div class="flex items-center gap-2">
          <svg
            class="w-5 h-5 text-[var(--accent)]"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"></path>
          </svg>
          <span class="text-sm">Gwarancja na usługi</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg
      class="w-6 h-6 text-white/50"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
