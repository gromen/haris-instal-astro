---
const features = [
  {
    title: 'Doświadczenie',
    description: 'Ponad 15 lat w branży hydraulicznej. Setki zadowolonych klientów i tysiące wykonanych zleceń.',
    stat: '15+',
    statLabel: 'lat doświadczenia',
    icon: 'award',
  },
  {
    title: 'Uczciwe ceny',
    description: 'Transparentne wyceny bez ukrytych kosztów. Płacisz tylko za to, co zostało ustalone.',
    stat: '100%',
    statLabel: 'transparentności',
    icon: 'shield',
  },
  {
    title: 'Gwarancja jakości',
    description: 'Na wszystkie wykonane prace udzielamy gwarancji. Używamy tylko sprawdzonych materiałów.',
    stat: '24m',
    statLabel: 'gwarancji',
    icon: 'badge',
  },
];
---

<section id="dlaczego-my" class="section-padding">
  <div class="container-custom">
    <!-- Section header -->
    <div class="text-center mb-16">
      <span class="text-[var(--accent)] font-medium text-sm uppercase tracking-wider">Dlaczego my</span>
      <h2 class="section-title mt-2">Zaufaj profesjonalistom</h2>
      <p class="section-subtitle">
        Wybierając nas, zyskujesz pewność najwyższej jakości usług i obsługi.
      </p>
    </div>

    <!-- Features grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <div class="card text-center group hover:border-[var(--accent)] transition-all duration-300">
            <!-- Icon -->
            <div class="w-16 h-16 mx-auto mb-6 rounded-full bg-gradient-copper flex items-center justify-center shadow-glow group-hover:shadow-glow-lg transition-shadow duration-300">
              {feature.icon === 'award' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              )}
              {feature.icon === 'shield' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
              {feature.icon === 'badge' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
              )}
            </div>

            <!-- Stat -->
            <div class="mb-4">
              <span class="text-4xl md:text-5xl font-bold text-gradient">{feature.stat}</span>
              <span class="block text-sm text-[var(--text-secondary)] mt-1">{feature.statLabel}</span>
            </div>

            <!-- Content -->
            <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
            <p class="text-[var(--text-secondary)]">{feature.description}</p>
          </div>
        ))
      }
    </div>

    <!-- Additional stats bar -->
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="text-center p-4">
        <span class="text-2xl md:text-3xl font-bold text-[var(--accent)]">500+</span>
        <span class="block text-sm text-[var(--text-secondary)] mt-1">Zadowolonych klientów</span>
      </div>
      <div class="text-center p-4">
        <span class="text-2xl md:text-3xl font-bold text-[var(--accent)]">1000+</span>
        <span class="block text-sm text-[var(--text-secondary)] mt-1">Wykonanych zleceń</span>
      </div>
      <div class="text-center p-4">
        <span class="text-2xl md:text-3xl font-bold text-[var(--accent)]">24/7</span>
        <span class="block text-sm text-[var(--text-secondary)] mt-1">Dyżur awaryjny</span>
      </div>
      <div class="text-center p-4">
        <span class="text-2xl md:text-3xl font-bold text-[var(--accent)]">100%</span>
        <span class="block text-sm text-[var(--text-secondary)] mt-1">Satysfakcji</span>
      </div>
    </div>
  </div>
</section>
