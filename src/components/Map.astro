---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

// Sosnowiec coordinates
const mapSrc = 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d81892.53458890395!2d19.07!3d50.29!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4716cf2e4b6b9c73%3A0x400e8b9f69d40!2sSosnowiec!5e0!3m2!1spl!2spl!4v1700000000000!5m2!1spl!2spl';
---

<div class:list={['rounded-xl overflow-hidden', className]}>
  <iframe
    src={mapSrc}
    width="100%"
    height="400"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title="Lokalizacja Haris-Instal na mapie"
    class="w-full"
  ></iframe>
</div>
