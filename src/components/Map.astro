---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

// Ostr√≥w Mazowiecka - ul. Szkolna 17
const mapSrc = 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2424.8!2d21.895!3d52.802!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x471ed7e5a8c8c8c7%3A0x0!2sul.%20Szkolna%2017%2C%20Ostr%C3%B3w%20Mazowiecka!5e0!3m2!1spl!2spl!4v1700000000000!5m2!1spl!2spl';
---

<div class:list={['rounded-xl overflow-hidden', className]}>
  <iframe
    src={mapSrc}
    width="100%"
    height="400"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title="Lokalizacja Haris-Instal na mapie"
    class="w-full"
  ></iframe>
</div>
